<!-- Ingreso de ICFES -->
<div class="panel panel-primary">
  <div class="panel-heading">      
    Ingrese su NIP que aparece en su instructivo de pago.   
  </div>
   
  <div class="panel-body">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag cuenta_activar_registro_profesor_path, method: "post" do %>
        <div class="form-group">
          <%= label_tag :pin_icfes, "NIP" %>
          <%= text_field_tag :pin, nil, :autofocus => true, :class => "form-control", :placeholder => "PIN de ICFES" %>
        </div>
        <%= hidden_field_tag :tipo_persona, :value => "profesor" %>

        <%= submit_tag "Siguiente", :class => "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>