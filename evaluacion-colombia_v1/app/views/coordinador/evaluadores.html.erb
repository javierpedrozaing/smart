<h1>
  Evaluadores asignados
</h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <tr>
        <th>Nombre</th>
        <th>Evaluaciones realizadas</th>
        <th>Evaluaciones pendientes</th>
        <th>Estado</th>
      </tr>
      <!-- Listar evaluaciones que se estan realizando -->
      <% if @evaluadores.any? %>
        <% @evaluadores.each do |evaluador| %>
          <tr>
            <td><%= evaluador.persona.nombre_completo %></td>
            <td><%= evaluador.evaluaciones_terminadas %></td>
            <td><%= evaluador.evaluaciones_pendientes %></td>
            <td>Todo bien!</td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4">No hay evaluadores asignados</td>
        </tr>
      <% end %>
    </table>
  </div>
</div>