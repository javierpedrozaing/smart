<p id="notice"><%= notice %></p>

<h1>Lista de Personas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Tipo documento</th>
      <th>Documento</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido_paterno %></td>
        <td><%= persona.apellido_materno %></td>
        <td><%= persona.tipo_documento_id %></td>
        <td><%= persona.documento %></td>
        <td><%= persona.direccion %></td>
        <td><%= persona.telefono %></td>
        <td><%= persona.celular %></td>
        <td><%= persona.email %></td>
        <td><%= link_to 'Show', admin_personas_path %></td>
        <td><%= link_to 'Edit', edit_admin_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', admin_personas_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

