<p id="notice"><%= notice %></p>

<h1>Lista Preguntas</h1>

<table>
  <thead>
    <tr>
      <th>Pregunta</th>
      <th>Grilla</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @preguntas.each do |pregunta| %>
      <tr>
        <td><%= pregunta.pregunta %></td>
        <td><%= pregunta.grilla.grilla %></td>
        <td><%= link_to 'Ver', pregunta_path(pregunta) %></td>
        <td><%= link_to 'Editar', edit_pregunta_path(pregunta) %></td>
        <td><%= link_to 'Eliminar', pregunta_path(pregunta), method: :delete, data: { confirm: 'Eata seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Pregunta', new_pregunta_path %>
