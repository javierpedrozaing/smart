<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Estadísticas Camarógrafos</h3>
  </div>
  <div class="panel-body">
<!--<h1>Estadisticas#admin_evaluador</h1>-->
<!--<p>Find me in app/views/estadisticas/admin_evaluador.html.erb</p>-->
<div class="row estadisticas">
  <div class="col-md-8 estadisticasNur-camarografo">  	
	 <div class="form-group input-sm">
	  <label class="control-label col-sm-offset-2 col-sm-2" for="canal"></label>
	  <div class="col-sm-6 col-md-4">
	    <select id="canal" name="canal" class="form-control">
	    	<option value=0>Seleccione canal--</option>
	      <% @canales.each do |ca| %> 	
	      <option value=<%= ca.id %>><%= ca.canal %></option>
	      <% end %>
	    </select> 
	  </div>
	</div>
    <!--a data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Corresponde a la totalidad de evaluaciones que fueron asignadas a pares evaluadores">Total Evaluaciones Asignadas<span class="badge"><%= @total %></span></a>
    <a class="terminadas" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Corresponde a la totalidad de evaluaciones realizadas por pares evaluadores">Evaluaciones Finalizadas<span class="badge"><%= @terminadas %></span></a -->
  </div>

<div class="row">

<div class="row evaluadoresTabla">
  <div class="col-xs-12">
  <div class="table-responsive" style="margin-top: 10px; margin-bottom: 20px;">
  <table class="table table-bordered table-hover"> 
    <thead>
      <tr>
        <th colspan="5" class="text-center">Información totales camarógrafos</th>
        </tr>                  
        </thead>           
        <thead>
        <tr>
          <th>Canal</th>
          <th>Total de Grabaciones faltantes</th>               
          <th>Total de Grabaciones Reportadas</th>
          <th>Total de Grabaciones Finalizadas</th>
        </tr>
        </thead>
        <tbody class="camarografo buscar">
			<tr>
				
				<td id="ver_canal"></td>			
				
				<td data-toggle="tooltip" data-placement="bottom" title="" ><span class="badge" id='tfaltantes'>0</span></td>
				<td data-toggle="tooltip" data-placement="bottom" title="" ><span class="badge" id='treportadas'>0</span></td>
				<td data-toggle="tooltip" data-placement="bottom" title="" ><span class="badge" id='tfinalizados'>0</span></td>
				
			</tr>

</tbody>
<tfoot class="text-center">
        <tr>
          <th>Canal</th>
          <th>Total de Grabaciones faltantes</th>          
          <th>Total de Grabaciones Reportadas</th>
          <th>Total de Grabaciones Finalizadas</th>
        </tr>
</tfoot>
</table>


</div>
</div>
</div> <!-- row evaluadoresTabla-->
</div> <!-- row -->
</div> <!-- row estadisticas -->
</div> <!-- panel body -->
</div> <!-- panel primary-->

<script>
$(document).ready(function(){
$("select")
  .change(function () {
    var str = "";
    $("select option:selected").each(function() {
      str += $( this ).text() + " ";      
    });
   var url = "/estadisticas/jefe_camarografos_totales";       
   $.post(url,{id : $(this).val()},function(data){
   	  
    	$("#tfaltantes").text(data[0]);
    	$("#treportadas").text(data[1]);
    	$("#tfinalizados").text(data[2]);
    	
     },'json');  
      	
    $("#ver_canal").text( str );
    
  })
  .change();
  
  });
</script>